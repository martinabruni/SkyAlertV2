<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/star_background"
    android:padding="16dp">

    <!-- Shared Header with Telescope Image -->
    <ImageView
        android:id="@+id/telescopeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/telescopio_description"
        android:src="@drawable/foto_telescopio" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/container_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Header Section -->

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="1sp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/italiana"
                android:gravity="center"
                android:text="@string/subscribe"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="20dp"
            android:background="@android:color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/topicInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border"
                android:hint="@string/broker"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />

            <TextView
                android:id="@+id/subscriptionResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white" />

            <ImageButton
                android:id="@+id/subscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@null"
                android:contentDescription="@string/dashboardSelected"
                android:src="@drawable/subscribe_button" />
        <!-- Scrollable Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/dashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/dashboardSelected"
            android:src="@drawable/dashboard_button" />

        <ImageButton
            android:id="@+id/subscribePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/subscribe"
            android:src="@drawable/subscribeselect" />
    </LinearLayout>
</LinearLayout>
