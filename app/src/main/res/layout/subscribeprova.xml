<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filtersPanel"
    android:layout_width="254dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/panel_background">

    <!-- Header con il titolo e l'icona di chiusura -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/filtersTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filters"
            android:fontFamily="@font/italiana"
            android:textColor="#1A2E3A"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <!-- Titolo "Your topic" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your topic:"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="#1A2E3A"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Lista delle macchine con pulsanti di selezione -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Elemento singolo per Macchina 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Macchina 1"
                android:textSize="13sp"
                android:textColor="#1A2E3A"
                android:fontFamily="@font/inter"/>

            <ImageButton
                android:id="@+id/circleButton1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:src="@drawable/ic_circle" />
        </LinearLayout>

        <!-- Ripeti per Macchina 2 e Macchina 3 con layout simile -->
        <!-- Macchina 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Macchina 2"
                android:textSize="13sp"
                android:textColor="#1A2E3A"
                android:fontFamily="@font/inter"/>

            <ImageButton
                android:id="@+id/circleButton2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:src="@drawable/ic_circle" />
        </LinearLayout>

        <!-- Macchina 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Macchina 3"
                android:textSize="13sp"
                android:textColor="#1A2E3A"
                android:fontFamily="@font/inter"/>

            <ImageButton
                android:id="@+id/circleButton3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:src="@drawable/ic_circle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sezione "From:" con selettori di data e ora -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="#1A2E3A"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Campo data e ora di inizio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/inter"
            android:text="Date:"
            android:textColor="#1A2E3A" />

        <EditText
            android:id="@+id/fromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="15dp"
            android:hint="dd/mm/yyyy"
            android:inputType="none" />

        <ImageButton
            android:id="@+id/datePickerButtonFrom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/calendario" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="#1A2E3A"
            android:fontFamily="@font/inter"/>

        <EditText
            android:id="@+id/fromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textSize="15dp"
            android:inputType="none"
            android:focusable="false" />

        <ImageButton
            android:id="@+id/timePickerButtonFrom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_clock" />
    </LinearLayout>

    <!-- Sezione "To:" con selettori di data e ora -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="#1A2E3A"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Campo data e ora di fine -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date: dd/mm/yyyy"
            android:textColor="#1A2E3A"
            android:fontFamily="@font/inter"/>

        <ImageButton
            android:id="@+id/datePickerButtonTo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Time: 00:00"
            android:textColor="#1A2E3A"
            android:fontFamily="@font/inter"/>

        <ImageButton
            android:id="@+id/timePickerButtonTo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_clock" />
    </LinearLayout>
</LinearLayout>
