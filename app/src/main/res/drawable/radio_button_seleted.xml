<!-- res/drawable/circle_button_with_center.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cerchio esterno -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:width="2dp"
                android:color="#083360" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Cerchio interno -->
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="12dp"
                android:height="12dp" />
            <solid android:color="#083360" />
        </shape>
    </item>

</layer-list>